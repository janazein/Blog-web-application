<%- include("partials/header.ejs") %>
<div class="container1">
  <form action="/update" method="POST">
    <input type="hidden" name="index" value="<%= index %>" />

    <label for="author">Author:</label>
    <input class="author" type="text" name="author" value="<%= post.author %>" required autofocus autocomplete="off"/>

    <label for="title">Title:</label>
    <input class="title" type="text" name="title" value="<%= post.title %>" required autofocus autocomplete="off" />

    <label for="content">Content:</label>
    <textarea class="content" name="content" required><%= post.content %></textarea>

    <input class="btn-post" type="submit" value="Update" />
  </form>
</div>
